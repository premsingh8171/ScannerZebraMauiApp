	  </MauiXaml>
	  <MauiXaml Update="Views\ConnectionHelp\ConnectionHelpPage.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </MauiXaml>
	  <MauiXaml Update="Views\ConnectionHelp\MfiBtleSelectionPage.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </MauiXaml>
	  <MauiXaml Update="Views\MorePage.xaml">
